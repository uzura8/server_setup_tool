ALLOW_IPS=`cat << EOS
xxx.xxx.xxx.xxx
EOS
`
NEWRELIC_LICENCE_KEY="input_newrelic_license_key"

GIT_USER_CONF=`cat << EOS
[user]
  email = mail@example.com
  name = Git Username
EOS
`

APP_DB_NAME="dbname"
MYSQL_USER_NAME="dbuser"
MYSQL_USER_PASS="dbpassword"

APP_GIT_URL="git@github.com:uzura8/flockbird.git"
